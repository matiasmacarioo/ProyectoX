@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}


<div class="row">
    <div class="col-md-10 mx-auto">
        <section>
            <div class="card-bg">
                <div class="card">
                    <form id="account" method="post">
                        <h1 class="titulo">@ViewData["Title"]</h1>
                        <hr />
                        <div class="col-md-10 mx-auto">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                    aria-required="true" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                    aria-required="true" />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Olvidé mi contraseña</a>
                                    </p>
                                </div>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark">Iniciar
                                    sesión</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>

        </section>
    </div>
